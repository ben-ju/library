{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
        <div class="col-md-2 p-lg-2 mx-auto mt-5 text-info">
            <h1 class="display-4 font-weight-normal text-left" style="letter-spacing: 2px">Read</h1>
            <h1 class="display-4 font-weight-normal text-right" style="letter-spacing: 2px">Learn</h1>
        </div>
        <div class="col-md-5 p-lg-5 mx-auto my-5">
            <p class="lead font-weight-normal" style="letter-spacing: 2px;">Start browsing into the biggest library</p>
            <a class="btn btn-outline-info" href="{{ path('shopping') }}" style="letter-spacing: 2px">Our documents</a>
        </div>
    </div>
    <h2 class="lead font-weight-normal text-center text-info pb-2" style="letter-spacing: 2px;">Recently viewed</h2>

    <div style="content: ''; min-height: 20vh;">
        {% if viewedDocuments is defined %}
            <div class="d-flex flex-row row col-12 justify-content-center">
                {% for document in viewedDocuments %}
                    {% if 'Novel' in get_class(document.document) %}
                        {% include 'home/viewed_thumbnails/__novel-thumbnails.html.twig' %}
                    {% elseif 'Cd' in get_class(document.document) %}
                        {% include 'home/viewed_thumbnails/__cd-thumbnails.html.twig' %}
                    {% elseif 'Dvd' in get_class(document.document) %}
                        {% include 'home/viewed_thumbnails/__dvd-thumbnails.html.twig' %}
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>

{% endblock %}
