{% extends 'base.html.twig' %}

{% block body %}
    <div class="card promoting-card col-10 m-3">
        <img src="{{ book.image }}" alt="" width="auto" height="300">
        <div class="collapse-content col-12">
            <p class="card-text align-items-center"
               id="collapseContent">{{ book.presentation |slice(0,90) }}...</p>
            <h3 class="card-title font-weight-bold text-success mb-2 p-0">{{ book.price }} $</h3>
            <div class="row">
                <div class="col-md-12 btn-group">
                    <a class="btn btn-success text-light" aria-expanded="false">Add</a>
                </div>
            </div>
            <div class="justify-content-around align-items-center col-12 mt-3">
                {% if book.stock ==  0 %}
                    <span class="text-info col-5">This book is not available at the moment</span>
                {% else %}
                    <span class="text-muted col-5">{{ book.stock }} copies in stock</span>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}